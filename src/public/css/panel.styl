#panel-section
  padding 20px 50px 0 50px

.panel-header
  margin-top 30px

#username-wrapper
  transform translateY(50%)

  z-index 5

.user-portrait
  float left
  vertical-align bottom
  margin-right 10px
  cursor pointer


.username
  font-family 'Montserrat', 'sans-serif'
  color white
  font-size 1.7em
  text-transform uppercase
  line-height 2

.panel-content
  margin 0 auto
  margin-top 30px
  background-color rgba(255, 255, 255, 0.05)

  //background-image url("../images/content-bg.png")
  //background-size cover
  //background-repeat no-repeat
  width 1472px
  min-height 75vh
  padding 100px
  padding-top 60px
  vertical-align middle
  -webkit-border-radius 25px
  -moz-border-radius 25px
  border-radius 25px

.content-wrapper
  padding 30px;
  padding-top 0

.panel-title
  color white
  font-family: 'Nunito', sans-serif;
  font-weight normal

div.dataset
  font-family 'Kanit', sans-serif
  background-image url("../images/dataset-bg.png")
  background-repeat no-repeat
  display inline-block
  //background-position 0 0
  min-height 190px

div.dataset-done
  font-family 'Kanit', sans-serif
  background-image url("../images/dataset-done-bg.png")
  background-repeat no-repeat
  display inline-block
  min-height 190px

  opacity 0.5

.dataset-info
  display inline-block
  vertical-align bottom
  margin-top 50px
  margin-left 90px
  //margin-left -90px

  > *
    font-size 2.2em

.dataset-title
  color white

.dataset-count
  color #6aff76

.panel-btn
  cursor pointer
  transform scale(1.0)
  transition transform 300ms

  z-index 2

.panel-btn:hover
  transform scale(1.1)

#white-aside
  display none
  background-color white
  position absolute
  top: 50px
  left: 50%;
  transform: translate(-50%, 0%);
  width 90%
  min-height 580px

  -webkit-border-radius 25px
  -moz-border-radius 25px
  border-radius 25px

  padding 50px

  z-index 10

  label
    font-size 1.3em


.form-header
  font-family 'Kanit', sans-serif
  color #8fdf5b

.ajax-file-upload-statusbar
  display inline-block

.ajax-file-upload-preview
  max-width 200px !important
  height 100px !important

.ajax-file-upload-container
  max-height 1000px
  overflow scroll

#form-dataset-count-wrapper
  font-family 'Montserrat' 'sans-serif'
  font-size 1.8em
  color #1b8129

#black-dialog
  display none
  background-image url("../images/black-dialog-bg.png")
  background-repeat no-repeat
  background-size cover

  z-index 10
  position fixed
  top: 20%
  left: 50%;
  transform: translate(-50%, 0%);
  width 672px
  height 258px

  z-index 10

  font-family 'Montserrat' 'sans-serif'

  padding 10px
  padding-top 80px

  h1#black-dialog-title
    color #7ad11e
    text-align center

  h2#black-dialog-desc
    color white
    text-align center

#close-form-button
  cursor pointer
  position absolute
  top 20px
  right 20px

#image-wrapper
  height 485px
  overflow hidden

  img
    max-width inherit
//opacity 0.0
//display none


.tagging-form
  min-height 730px

.tagging-dataset
  color #1b8129

.tagging-counts
  color #6aff76

#user-settings
  display none

  background-image url("../images/mini-black-dialog-bg.png")
  background-size cover
  background-repeat no-repeat

  width 306px
  height 190px

  position fixed
  right 25px
  top 50px

  z-index 5

  ul
    margin-top 40px
    list-style none
    color white
    font-size 1.5em
    margin-left 0
    padding-left 0

    li
      padding 10px
      padding-left 30px

      font-family: 'Kanit', cursive;
      margin-left 0
      background-color none

      cursor pointer

      transition background-color 300ms

    li:hover
      background-color #006a0a

.add-form
  width 70% !important
